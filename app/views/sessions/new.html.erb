<div ng-controller='SessionCtrl'>
	<div class='row'>
		<div class='col-sm-6 col-sm-offset-3'>
			<h2><small>Login</small></h2>
		</div>
	</div>
	<div class='row'>
		<div class='col-sm-6 col-sm-offset-3'>
			<div class="panel panel-default">
			  <div class="panel-body">
			   <%= form_tag login_path, class: 'form-horizontal' do %>
			    	<div class="form-group">
			    		<%= label_tag 'email', 'Email Address', class: 'control-label sr-only' %>
					    <div class="col-sm-10 col-sm-offset-1">
					      <%= email_field_tag 'email', nil, class: 'form-control', placeholder: 'Email address', required: true, 'ng-model' => 'email', 'ch-validate' => 'email' %>
					    </div>
					  </div>
					  <div class="form-group">
					    <%= label_tag 'password', 'Password', class: 'control-label sr-only' %>
					    <div class="col-sm-10 col-sm-offset-1">
					     <%= password_field_tag 'password', nil, class: 'form-control', placeholder: 'Password', required: true, 'ng-model' => 'password', 'ng-minlength' => '6', 'ch-validate' => 'password' %>
					    </div>
					  </div>
					  <div class="form-group">
					    <div class="col-sm-10 col-sm-offset-1">
					      <%= submit_tag 'Login', class: 'btn btn-success' %>
					    </div>
					  </div>
					  <div class="form-group">
					    <%= render partial: 'users/remember_me' %>
					    <div class='col-sm-5 col-sm-offset-2'>
								<button type="button" class='btn btn-link' data-toggle="modal" data-target="#forgot_password_modal">Forgot password</button>
							</div>
					  </div>
			    <% end %>
			  </div>
			</div>
		</div>
	</div>
	<%= render partial: 'sessions/forgot_password' %>
</div>

